<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_floating_action_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zhet.smsapp.FloatingActionButtonActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/fab_activity_toolbar" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fab_activity_toolbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listView_fab"/>

</RelativeLayout>
